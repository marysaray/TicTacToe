<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingHorizontal="24dp"
    android:paddingVertical="24dp"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/newGameButtonId"
        android:layout_width="316dp"
        android:layout_height="90dp"
        android:layout_marginTop="8dp"
        android:text="New Game"
        android:textSize="48sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.489"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/messageTextId"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/twoButtonId"
        android:layout_width="100dp"
        android:layout_height="130dp"
        android:text="2"
        android:textSize="96sp"
        app:layout_constraintEnd_toStartOf="@+id/threeButtonId"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/oneButtonId"
        app:layout_constraintTop_toTopOf="@+id/threeButtonId" />

    <Button
        android:id="@+id/threeButtonId"
        android:layout_width="100dp"
        android:layout_height="130dp"
        android:layout_marginTop="24dp"
        android:text="3"
        android:textSize="96sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/twoButtonId"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/oneButtonId"
        android:layout_width="100dp"
        android:layout_height="130dp"
        android:layout_marginTop="24dp"
        android:text="1"
        android:textAlignment="center"
        android:textSize="96sp"
        app:layout_constraintEnd_toStartOf="@+id/twoButtonId"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/fourButtonId"
        android:layout_width="100dp"
        android:layout_height="130dp"
        android:layout_marginTop="40dp"
        android:text="4"
        android:textSize="96sp"
        app:layout_constraintEnd_toStartOf="@+id/fiveButtonId"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/oneButtonId" />

    <Button
        android:id="@+id/fiveButtonId"
        android:layout_width="100dp"
        android:layout_height="130dp"
        android:text="5"
        android:textSize="96sp"
        app:layout_constraintEnd_toStartOf="@+id/sixButtonId"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/fourButtonId"
        app:layout_constraintTop_toTopOf="@+id/sixButtonId" />

    <Button
        android:id="@+id/sixButtonId"
        android:layout_width="100dp"
        android:layout_height="130dp"
        android:layout_marginTop="40dp"
        android:text="6"
        android:textSize="96sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/fiveButtonId"
        app:layout_constraintTop_toBottomOf="@+id/threeButtonId" />

    <Button
        android:id="@+id/eightButtonId"
        android:layout_width="100dp"
        android:layout_height="130dp"
        android:text="8"
        android:textSize="96sp"
        app:layout_constraintEnd_toStartOf="@+id/nineButtonId"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/sevenButtonId"
        app:layout_constraintTop_toTopOf="@+id/nineButtonId" />

    <Button
        android:id="@+id/sevenButtonId"
        android:layout_width="100dp"
        android:layout_height="130dp"
        android:layout_marginTop="40dp"
        android:text="7"
        android:textSize="96sp"
        app:layout_constraintEnd_toStartOf="@+id/eightButtonId"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fourButtonId" />

    <Button
        android:id="@+id/nineButtonId"
        android:layout_width="100dp"
        android:layout_height="130dp"
        android:layout_marginTop="40dp"
        android:text="9"
        android:textSize="96sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/eightButtonId"
        app:layout_constraintTop_toBottomOf="@+id/sixButtonId" />

    <TextView
        android:id="@+id/messageTextId"
        android:layout_width="258dp"
        android:layout_height="55dp"
        android:layout_marginTop="32dp"
        android:text="Player X's turn"
        android:textAlignment="center"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/eightButtonId" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/horizontal1GuideLineId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.5" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/horizontal3GuideLineId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.75" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/horizontal4GuideLineId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.25" />

</androidx.constraintlayout.widget.ConstraintLayout>